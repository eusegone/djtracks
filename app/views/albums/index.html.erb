<h1>Music Box</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Album</th>
      <th>Tracks</th>
      <th>Edit</th>
      <th>Destroy</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= image_tag album.album_image, width: 90 %></td>
        <td><%= link_to album.name, album %></td>
        <td>
          <% album.tracks.each do |track| %>
            <%= track.name %>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_album_path(album) if can? :edit, album %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, album %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

